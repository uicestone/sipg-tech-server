{
  "name": "sipg-tech-server",
  "version": "0.2.0",
  "description": "SIPG engineering and technology platform server apis.",
  "scripts": {
    "dev": "nodemon --watch src -e ts --exec 'ts-node ./src/'",
    "start": "yarn dev",
    "test": "echo \"No test specified.\" && exit 0",
    "build": "tsc",
    "lint": "eslint ./src/*.ts ./src/*/*.ts ./src/*/*/*.ts"
  },
  "author": "Uice Lu",
  "license": "GPL-3.0",
  "dependencies": {
    "@typegoose/typegoose": "^6.1.8",
    "@types/agenda": "^2.0.5",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/method-override": "^0.0.31",
    "@types/mongoose": "^5.5.0",
    "agenda": "^2.0.2",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.4",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "eslint": "^6.3.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "method-override": "^3.0.0",
    "moment": "^2.24.0",
    "mongoose": "^5.5.7",
    "xlsx-populate": "^1.20.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "babel-eslint": "^10.0.1",
    "babel-plugin-component": "^1.1.1",
    "eslint-plugin-vue": "^5.0.0",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.19.0",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5",
    "webpack": "^4.31.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "no-console": 1,
      "no-unused-vars": 1
    },
    "parserOptions": {
      "parser": "@typescript-eslint/parser",
      "ecmaFeatures": {
        "jsx": false
      }
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
